<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="ThemeAmicumMobile" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/strokeColor</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/strokeColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textSize">14sp</item>
        <item name="textInputStyle">@style/TextLayout</item>
        <item name="materialButtonStyle">@style/MaterialButtonStyle</item>
    </style>

    <style name="LabelText" parent="ThemeAmicumMobile">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">#B3B3B3</item>
    </style>
    <style name="LabelMessageText" parent="ThemeAmicumMobile">
        <item name="android:textColor">#B55A6E</item>
        <item name="android:textColorHint">#B3B3B3</item>
    </style>

    <style name="TextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">#B3B3B3</item>
        <item name="hintTextColor">@color/strokeColor</item>
        <item name="boxStrokeColor">@color/strokeColor</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlHighlight">@color/purple_700</item>
        <item name="colorControlActivated">@color/strokeColor</item>
    </style>

    <style name="CheckBox" parent="ThemeAmicumMobile">
        <item name="android:textColor">@color/black</item>
        <item name="android:buttonTint">#999999</item>
        <item name="android:textColorHint">#B3B3B3</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#598D9B</item>
        <item name="android:textColor">#FFFFFF</item>
        <!--        <item name="android:background">@drawable/button_effect</item>-->
        <item name="android:padding">0sp</item>
    </style>

    <style name="MaterialButtonStyleNoBackground" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:padding">0sp</item>
    </style>
</resources>